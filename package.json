
{
  "name": "weml-stylesheet",
  "version": "1.0.0",
  "description": "weml web format stylesheet",
  "author": "EGW-Alpha <rev4ge@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EGW-Alpha/weml-stylesheet.git"
  },
  "main": "index.scss",
  "scripts": {
    "build": "rimraf css && npm run build-sass && npm run build-autoprefix && npm run build-cleancss",
    "build-sass": "node-sass --output-style expanded src/weml/index.scss ./css/weml.css",
    "build-autoprefix": "postcss --use autoprefixer --map --output ./css/index.css ./css/weml.css",
    "convert-to-sass": "node-sass --output-style expanded src/weml ./css",
    "build-cleancss": "cleancss -o ./css/weml.min.css ./css/weml.css"
  },
  "files": [
    "css"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "clean-css-cli": "^5.6.2",
    "node-sass": "^8.0.0",
    "sass": "^1.60.0",
    "postcss-cli": "^10.1.0",
    "rimraf": "^4.4.1",
    "normalize-scss": "^7.0.1",
    "stylelint": "^15.3.0",
    "stylelint-scss": "^4.6.0",
    "stylelint-config-recommended": "^11.0.0",
    "stylelint-config-recommended-scss": "^9.0.1",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-recommended-less": "^1.0.4",
    "stylelint-config-html": "^1.1.0"
  }
}
